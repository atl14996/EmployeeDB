<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnAddEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>


    <Button
        android:id="@+id/btnUpdateDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

   <FrameLayout
       android:id="@+id/frmRVAllEntries"
       android:layout_width="match_parent"
       android:layout_height="500dp"></FrameLayout>

    <FrameLayout
        android:id="@+id/frmInsertEmployee"
        android:layout_width="wrap_content"
        android:layout_height="400dp"></FrameLayout>

    <FrameLayout
        android:id="@+id/frmEditUpdateDelete"
        android:layout_width="wrap_content"
        android:layout_height="400dp"></FrameLayout>
</LinearLayout>